---
import BaseLayout from "@layouts/BaseLayout.astro";
const allPosts: Array<{[field: string]: any}> = await Astro.glob('../posts/*.md');
const tags: string[] = [...new Set(allPosts.map((post): string[] => post.frontmatter.tags).flat())];

const pageTitle: string = "タグインデックス";
---
<BaseLayout pageTitle={pageTitle}>
  <div>
    <h2>コンテンツ</h2>
    <ul class="tags">
      {tags.map((tag): Element => <li class="tag"><a href={`/tags/${tag}`}>{tag}</a></li>)}
    </ul>
  </div>
</BaseLayout>

<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    padding: initial;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
    list-style: none;
  }
</style>